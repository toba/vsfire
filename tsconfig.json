{
   "compilerOptions": {
       "module": "commonjs",
       "target": "es6",
       "outDir": "./out",
       "lib": [
           "es6",
           "dom"
       ],
       "sourceMap": true,
       "rootDir": ".",
       "noImplicitAny": true,
       "newLine": "LF",
       "allowJs": true,
       "noUnusedLocals": true,
       "noUnusedParameters": true
   },
   "include": [
       "./src/**/*",
       "./test/**/*"
   ]
}